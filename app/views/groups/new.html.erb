<h1>Add New Category</h1>

<%= form_with model: @group, url: groups_path, local: true do |f| %>
  <%= f.text_field :name, autofocus: true, placeholder: "Category Name" %>
  
  <div class="form-group">
    <%= f.label :icon, "Select Icon" %>
    <%= f.collection_select(:icon, [
        ['cash.png', 'Savings 💰'],
        ['hospital.png', 'Medical 👩‍⚕️'],
        ['store.png', 'Shopping 🏪'],
        ['sports.png', 'Activity 🏆'],
        ['beach.png', 'Leisure ⛱️'],
        ['travel.png', 'Travel 🎫'],
        ['other.png', 'Others 📝']
      ], :first, :last, { prompt: 'Select Icon' }, { class: 'form-control' }) %>
  </div>

  <%= f.submit "Save" %>
<% end %>

